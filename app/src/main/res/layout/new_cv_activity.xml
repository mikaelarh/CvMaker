<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground">

    <!-- Imagen bajada con margenTop aumentado -->
    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/ic_add_a_photo"
        android:background="@drawable/bg_rounded"
        android:contentDescription="Foto de CV"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ScrollView con botones -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/imgProfile"
        app:layout_constraintBottom_toTopOf="@+id/bottomButtonsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/linearContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_personal_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Información Personal"
                android:textColor="@color/white"
                android:textAllCaps="false"
                app:backgroundTint="@color/RevenClaw"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_person"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Perfil Profesional"
                android:textColor="@color/white"
                android:textAllCaps="false"
                app:backgroundTint="@color/RevenClaw"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_star"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_work_experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Experiencia Laboral"
                android:textColor="@color/white"
                android:textAllCaps="false"
                app:backgroundTint="@color/RevenClaw"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_business"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_school_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Educación"
                android:textColor="@color/white"
                android:textAllCaps="false"
                app:backgroundTint="@color/RevenClaw"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_school"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_skills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Habilidades Técnicas"
                android:textColor="@color/white"
                android:textAllCaps="false"
                app:backgroundTint="@color/RevenClaw"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_network_intel"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Idiomas"
                android:textColor="@color/white"
                android:textAllCaps="false"
                app:backgroundTint="@color/RevenClaw"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_language"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_certifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cursos y Certificados"
                android:textColor="@color/white"
                android:textAllCaps="false"
                app:backgroundTint="@color/RevenClaw"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_certificate"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_hobby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aficiones / Intereses"
                android:textColor="@color/white"
                android:textAllCaps="false"
                app:backgroundTint="@color/RevenClaw"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_hobby"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_soft_skills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Habilidades Blandas"
                android:textColor="@color/white"
                android:textAllCaps="false"
                app:backgroundTint="@color/RevenClaw"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_soft_skills"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Información Adicional"
                android:textColor="@color/white"
                android:textAllCaps="false"
                app:backgroundTint="@color/RevenClaw"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_aditional_info"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_social_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Redes Sociales"
                android:textColor="@color/white"
                android:textAllCaps="false"
                app:backgroundTint="@color/RevenClaw"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_social_networks"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Zona inferior fija -->
    <LinearLayout
        android:id="@+id/bottomButtonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_visualize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Visualizar PDF"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:backgroundTint="@color/RevenClawLight"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_visibility"
            app:iconGravity="textStart"
            app:iconTint="@color/white"
            android:layout_marginStart="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buton_export"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Exportar PDF"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:backgroundTint="@color/Slytherin"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_pdf"
            app:iconGravity="textStart"
            app:iconTint="@color/white"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
